{
  "name": "easyrops",
  "displayName": "Easy Props",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easyprops.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "easyprops.addProp",
        "title": "Add Prop"
      },
      {
        "command": "easyprops.setRequired",
        "title": "Set Requirement"
      }
    ],
     "configuration": {
      "title": "Easy Props",
      "properties": {
        "easyprops.propRequired": {
          "type": "boolean",
          "default": false,
          "description": "Set required field to true or false"
        },
        "easyprops.authName": {
          "type": "string",
          "default": "easyAuth",
          "description": "The name of your piece's auth, for dynamic lists"
        },
        "easyprops.optionsLength": {
          "type": "number",
          "default": 1,
          "description": "The number of elements provided in drop down menus"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
